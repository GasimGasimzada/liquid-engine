{
  "dependencies": [
    {
      "name": "glfw",
      "url": "https://github.com/glfw/glfw/releases/download/3.3.4/glfw-3.3.4.zip",
      "buildSource": "glfw-3.3.4",
      "cmd": [
        "cmake -DCMAKE_INSTALL_PREFIX={{VENDOR_DIR}} -DBUILD_SHARED_LIBS=ON .",
        "make",
        "make install"
      ]
    },
    {
      "name": "libktx",
      "url": "https://github.com/KhronosGroup/KTX-Software/archive/refs/tags/v4.0.0.zip",
      "buildSource": "KTX-Software-4.0.0",
      "cmd": [
        "cmake . -B build -DKTX_FEATURE_STATIC_LIBRARY=ON -DKTX_FEATURE_TESTS=OFF",
        "chmod +x mkversion",
        "cmake --build build",
        "mkdir -p {{VENDOR_DIR}}/include {{VENDOR_DIR}}/lib",
        "{COPY} build/libktx.a {{VENDOR_DIR}}/lib",
        "{COPY} build/libktx_read.a {{VENDOR_DIR}}/lib",
        "{COPY} include/ktx.h {{VENDOR_DIR}}/include",
        "{COPY} include/ktxvulkan.h {{VENDOR_DIR}}/include"
      ]
    },
    {
      "name": "dearimgui",
      "url": "https://github.com/ocornut/imgui/archive/refs/tags/v1.83.zip",
      "buildSource": "imgui-1.83",
      "cmd": [
        "mkdir -p {{VENDOR_DIR}}/src/imgui",
        "{COPY} LICENSE.txt *.cpp backends/imgui_impl_glfw.cpp backends/imgui_impl_vulkan.cpp {{VENDOR_DIR}}/src/imgui",
        "{COPY} *.h backends/imgui_impl_glfw.h backends/imgui_impl_vulkan.h {{VENDOR_INCLUDE_DIR}}"
      ]
    },
    {
      "name": "googletest",
      "buildSource": "googletest-release-1.11.0",
      "url": "https://github.com/google/googletest/archive/refs/tags/release-1.11.0.zip",
      "cmd": [
        "cmake -DCMAKE_INSTALL_PREFIX={{VENDOR_DIR}} .",
        "make",
        "make install"
      ]
    },
    {
      "name": "glm",
      "buildSource": "glm",
      "url": "https://github.com/g-truc/glm/releases/download/0.9.9.8/glm-0.9.9.8.zip",
      "cmd": ["mv glm {{VENDOR_INCLUDE_DIR}}"]
    },
    {
      "name": "tinygltf",
      "buildSource": "tinygltf-2.5.0",
      "url": "https://github.com/syoyo/tinygltf/archive/refs/tags/v2.5.0.zip",
      "cmd": [
        "mkdir -p {{VENDOR_INCLUDE_DIR}}/tinygltf",
        "mv tiny_gltf.h {{VENDOR_INCLUDE_DIR}}/tinygltf"
      ]
    },
    {
      "name": "json",
      "buildSource": ".",
      "url": "https://github.com/nlohmann/json/releases/download/v3.9.1/include.zip",
      "cmd": [
        "mkdir -p {{VENDOR_INCLUDE_DIR}}/json",
        "mv single_include/nlohmann/json.hpp {{VENDOR_INCLUDE_DIR}}/json"
      ]
    },
    {
      "name": "vma",
      "buildSource": "VulkanMemoryAllocator-2.3.0-vs2017",
      "url": "https://github.com/GPUOpen-LibrariesAndSDKs/VulkanMemoryAllocator/archive/refs/tags/v2.3.0+vs2017.zip",
      "cmd": [
        "mkdir -p {{VENDOR_INCLUDE_DIR}}/vma",
        "mv src/vk_mem_alloc.h {{VENDOR_INCLUDE_DIR}}/vma"
      ]
    },
    {
      "name": "stb-image",
      "buildSource": "stb-master",
      "url": "https://github.com/nothings/stb/archive/refs/heads/master.zip",
      "cmd": [
        "mkdir -p {{VENDOR_INCLUDE_DIR}}/stb",
        "mv stb_image.h {{VENDOR_INCLUDE_DIR}}/stb"
      ]
    }
  ]
}
